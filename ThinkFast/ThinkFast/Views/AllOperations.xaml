<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resources="clr-namespace:ThinkFast.Resources;assembly=ThinkFast"
             mc:Ignorable="d"
             x:Class="ThinkFast.Views.AllOperations"
             BackgroundColor="#D0E0F0"
             Title="{resources:Translate Combo}">
    <ContentPage.Content>
        <StackLayout x:Name="GameStack">
            <Button x:Name="Repeat"
                Margin="0,16,0,0" Text="{resources:Translate Repeat}"
                    HorizontalOptions="Center"
                    Clicked="RepeatButtonOnClicked"
                    IsVisible="False"
                    
            />
            <Button Margin="0,16,0,0" Text="{resources:Translate Play}"
                    HorizontalOptions="Center"
                    Clicked="StartGame"
            />
            <!--<views:NativeAdView HeightRequest="280"  VerticalOptions="EndAndExpand"/>-->

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>